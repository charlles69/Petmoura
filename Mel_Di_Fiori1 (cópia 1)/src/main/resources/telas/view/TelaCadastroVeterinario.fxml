<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="crud_veterinario.VeterinarioCreateController"
            stylesheets="@/css/style.css">
            
    <VBox alignment="TOP_CENTER" spacing="20" 
          AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30" 
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        
        <Label text="👨‍⚕️ Cadastro de Veterinário" 
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints halignment="LEFT" prefWidth="300"/>
            </columnConstraints>
            
            <!-- Nome -->
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtNome" promptText="Nome completo" 
                      prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <!-- CPF -->
            <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtCpf" promptText="000.000.000-00" 
                      prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <!-- CRV -->
            <Label text="CRV:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtCrv" promptText="Número do registro profissional" 
                      prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <!-- Especialidade -->
            <Label text="Especialidade:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtEspecialidade" promptText="Ex: Clínica Geral, Cirurgia, etc." 
                      prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <!-- Telefone -->
            <Label text="Telefone:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" 
                      prefWidth="300" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <!-- Email -->
            <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtEmail" promptText="email@exemplo.com" 
                      prefWidth="300" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            
            <!-- Salário -->
            <Label text="Salário:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <TextField fx:id="txtSalario" promptText="0.00" prefWidth="150"/>
                <Label text="R$" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Data Admissão -->
            <Label text="Data Admissão:" GridPane.rowIndex="7" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <DatePicker fx:id="dateDataAdmissao" prefWidth="300" 
                       GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Botões -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="⬅️ Voltar" onAction="#voltarParaLista" 
                    styleClass="btn-secondary"/>
            <Button text="🗑️ Limpar" onAction="#limparCampos" 
                    styleClass="btn-danger"/>
            <Button text="💾 Salvar" onAction="#salvarVeterinario" 
                    styleClass="btn-success"/>
        </HBox>

    </VBox>
</AnchorPane>