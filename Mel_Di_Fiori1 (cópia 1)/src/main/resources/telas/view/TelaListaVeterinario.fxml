<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="crud_veterinario.VeterinarioListController"
      spacing="20" alignment="TOP_CENTER"
      stylesheets="@/css/style.css"
      style="-fx-padding: 20;">
    
    <Label text="Lista de Veterinários" 
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    
    <!-- Tabela de Veterinários -->
    <TableView fx:id="tableVeterinarios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="colCpf" text="CPF" prefWidth="120"/>
            <TableColumn fx:id="colCrv" text="CRV" prefWidth="100"/>
            <TableColumn fx:id="colEspecialidade" text="Especialidade" prefWidth="150"/>
            <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="120"/>
            <TableColumn fx:id="colSalario" text="Salário" prefWidth="100"/>
            <TableColumn fx:id="colDataAdmissao" text="Data Admissão" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    
     <!-- Botões de Ação -->
     <HBox spacing="15" alignment="CENTER">
        <Button text="➕ Novo Veterinário" onAction="#abrirCadastro" 
                styleClass="btn-success"/>
        <Button text="✏️ Editar" onAction="#editarVeterinario" 
                styleClass="btn-primary"/>
        <Button text="🗑️ Excluir" onAction="#excluirVeterinario" 
                styleClass="btn-danger"/>
        <Button text="📊 Dashboard" onAction="#voltarParaDashboard" 
                styleClass="btn-info"/>
    </HBox>

</VBox>