<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="crud_animal.AnimalListController"
      fx:id="mainContainer"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: white;"
      stylesheets="@/css/style.css">
    
    <Label text="🐾 Lista de Animais" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    
    <!-- Tabela de Animais - COM ESTILOS EXPLÍCITOS -->
    <TableView fx:id="tableVeterinarios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="colEspecie" text="Espécie" prefWidth="120"/>
            <TableColumn fx:id="colRaca" text="Raça" prefWidth="120"/>
            <TableColumn fx:id="colIdade" text="Idade" prefWidth="80"/>
            <TableColumn fx:id="colPeso" text="Peso (kg)" prefWidth="100"/>
            <TableColumn fx:id="colTutor" text="Tutor" prefWidth="150"/>
            <TableColumn fx:id="colDataCadastro" text="Data Cadastro" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

     <!-- Botões de Ação -->
     <HBox spacing="15" alignment="CENTER">
        <Button text="➕ Cadastrar Novo" onAction="#abrirCadastro" 
                styleClass="btn-success"/>
        <Button text="✏️ Editar" onAction="#editarAnimal" 
                styleClass="btn-primary"/>
        <Button text="🗑️ Excluir" onAction="#excluirAnimal" 
                styleClass="btn-danger"/>
        <Button text="📊 Dashboard" onAction="#voltarParaDashboard" 
                styleClass="btn-info"/>
    </HBox>
    
</VBox>